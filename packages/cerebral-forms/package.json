{
  "name": "cerebral-forms",
  "version": "1.0.0-b",
  "description": "Signals, actions and state factories to create forms",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register 'src/**/*.test.js'",
    "test:watch": "npm run test -- --watch",
    "build": "cross-env BABEL_ENV=production babel src/ --out-dir=lib/ -s",
    "coverage": "nyc --reporter=lcov --reporter=json npm run test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerebral/cerebral.git"
  },
  "keywords": [
    "cerebral",
    "forms"
  ],
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cerebral/cerebral/issues"
  },
  "homepage":
    "https://github.com/cerebral/cerebral/tree/master/packages/cerebral-forms#readme",
  "peerDependencies": {
    "cerebral": "^2.0.0-b"
  },
  "devDependencies": {
    "cerebral": "^2.0.0-b"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "lib",
      "tests",
      "**/*.test.js",
      "**/testHelper.js"
    ]
  }
}
