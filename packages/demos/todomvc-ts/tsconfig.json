{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "cerebral.proxy": ["cerebral.proxy.ts"]
    },
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
