{
  "name": "cerebral-monorepo",
  "version": "0.0.0",
  "scripts": {
    "setup": "lerna bootstrap",
    "commit": "git-cz",
    "lint": "standard",
    "pretest": "npm run lint && lerna bootstrap",
    "test": "lerna run test",
    "coverage": "lerna run coverage && istanbul-combine -d coverage -p summary -r lcov -r html packages/**/coverage/*.json",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "deploy": "cd packages/website && npm run ci"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.16.3",
    "commitizen": "^2.5.0",
    "coveralls": "^2.11.14",
    "cz-customizable": "^4.0.0",
    "cz-customizable-ghooks": "^1.3.0",
    "ghooks": "^1.0.3",
    "istanbul-combine": "^0.3.0",
    "jsdom": "^9.5.0",
    "lerna": "2.0.0-beta.30",
    "mocha": "^3.1.0",
    "mocha-jsdom": "^1.1.0",
    "nyc": "^8.3.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "standard": "^8.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    },
    "ghooks": {
      "commit-msg": "./node_modules/cz-customizable-ghooks/lib/index.js $2"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/",
      "**/build/",
      "packages/cerebral-debugger/public/prism.js"
    ],
    "globals": [ "block", "content", "replace", "tag", "def", "applyNext", "applyCtx" ]
  },
  "private": true
}
