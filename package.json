{
  "name": "cerebral-monorepo",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "link": "link-parent-bin -s true && link-parent-bin -s true -c babel && link-parent-bin -s true -c demos && link-parent-bin -s true -c website",
    "setup": "lerna bootstrap",
    "setup:packages": "lerna bootstrap --ignore \"@(cerebral-*|babel-*)\"",
    "setup:babel": "lerna bootstrap --ignore cerebral-*",
    "checkdeps": "node ./scripts/dependencies.test.js",
    "commitmsg": "node ./node_modules/cz-customizable-ghooks/lib/index.js .git/COMMIT_EDITMSG",
    "commit": "git-cz",
    "lint": "standard",
    "prelint": "npm run checkdeps",
    "pretest": "npm run lint",
    "test": "node ./scripts/run.js test",
    "coverage": "node ./scripts/run.js coverage",
    "postcoverage": "istanbul-combine -d coverage -p summary -r lcov -r html packages/**/coverage/*.json babel/**/coverage/*.json",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "deploy": "cd website/publisher && npm run ci",
    "postinstall": "npm run link"
  },
  "dependencies": {
    "addressbar": "1.0.3",
    "aphrodite": "1.2.0",
    "bulma": "0.2.3",
    "chalk": "1.1.3",
    "classnames": "2.2.5",
    "eventemitter3": "2.0.2",
    "faye-websocket": "0.11.1",
    "feature.js": "1.0.0",
    "firebase": "3.9.0",
    "firebase-admin": "4.0.4",
    "firebase-queue": "1.6.0",
    "js-joda": "1.1.13",
    "match-media": "0.2.0",
    "offline-js": "0.7.18",
    "proxyquire": "1.7.11",
    "raf": "3.3.0",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "shortway": "0.3.0",
    "shx": "^0.2.2",
    "todomvc-app-css": "2.0.6",
    "todomvc-common": "1.0.2",
    "ua-parser-js": "0.7.10",
    "universal-websocket-client": "1.0.1",
    "url-mapper": "1.1.1",
    "uuid": "2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/build/"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-version-transform": "^1.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.23.0",
    "commitizen": "^2.9.6",
    "coveralls": "^2.12.0",
    "cross-env": "^5.0.0",
    "cz-customizable": "^4.0.0",
    "cz-customizable-ghooks": "^1.5.0",
    "execa": "^0.6.3",
    "firebase-server": "0.7.1",
    "gh-pages": "1.0.0",
    "husky": "^0.13.2",
    "istanbul-combine": "^0.3.0",
    "jest": "^18.1.0",
    "jsdom": "^9.9.1",
    "lerna": "^2.0.0-rc.4",
    "link-parent-bin": "^0.1.1",
    "mocha": "^3.4.1",
    "mocha-jsdom": "^1.1.0",
    "node-sass": "3.11.2",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.3.2",
    "react-addons-test-utils": "^15.4.2",
    "react-scripts": "0.9.5",
    "standard": "^8.6.0",
    "xhr-mock": "https://github.com/christianalfoni/xhr-mock.git"
  }
}
